# =================================
# SERVER CONFIGURATION
# =================================
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# =================================
# DATABASE
# =================================
# MongoDB connection string
# For local: mongodb://localhost:27017/genoun-api
# For Atlas: mongodb+srv://user:password@cluster.mongodb.net/genoun-api
MONGODB_URI=mongodb://localhost:27017/genoun-api

# =================================
# SECURITY - JWT
# =================================
# IMPORTANT: Use a strong secret in production (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=genoun-api
JWT_AUDIENCE=genoun-web

# =================================
# CORS
# =================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
WEBSITE_URL=http://localhost:3000

# Next.js Web Application URL (for cache revalidation)
WEB_URL=http://localhost:3000

# Secret for cache revalidation API
REVALIDATE_SECRET=genoun-revalidate-secret

# =================================
# EMAIL CONFIGURATION
# =================================
# SMTP Settings (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Genoun <noreply@genoun.com>"

# Email Verification
# Set to "true" to require email verification before login
# Set to "false" or leave empty to allow login without verification
REQUIRE_EMAIL_VERIFICATION=false

# =================================
# GOOGLE CLOUD (Optional)
# =================================
# Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./src/config/genoun-web-2aa0214ac388.json

# =================================
# AI CONFIGURATION
# =================================
# Get your Gemini API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key

# =================================
# GOOGLE SEARCH CONSOLE
# =================================
# Your verified site URL in GSC
GSC_SITE_URL=https://your-domain.com/

# =================================
# LOGGING
# =================================
# Log level: ERROR, WARN, INFO, DEBUG
LOG_LEVEL=DEBUG
